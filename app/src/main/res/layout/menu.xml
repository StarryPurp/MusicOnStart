<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">
    <Button
        android:id="@+id/mongbut"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#898fe5"
        android:textSize="40dp"
        android:text="몽환" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:id="@+id/sourbut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffea5f"
            android:textSize="40dp"
            android:text="상큼"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:id="@+id/sweetbut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff6822"
            android:textSize="40dp"
            android:text="달콤"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:id="@+id/hopbut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fc2574"
            android:textSize="40dp"
            android:text="설렘"
            />
    </LinearLayout>

    >

</LinearLayout>